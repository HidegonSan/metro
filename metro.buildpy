folders {
  include = include
  source  = src
}

build {
  .use_glob = true
  .no_overwrite = copy_folder

  compiler {
    c   = clang
    cpp = clang++
  }

  extensions {
    c { c }
    cpp { cc cxx cpp }
  }

  flags {
    opti  = -O2
    c     = $opti -Wno-switch -Wimplicit-fallthrough
    cpp   = $c -std=c++20
    link  = -Wl,--gc-sections
  }

  objects_folder = build
  linker = $compiler.cpp
}