folders {
  include = include
  source  = src
}

build {
  .fast = true
  .use_glob = true
  .no_overwrite = copy_folder

  compiler {
    c   = gcc-11
    cpp = g++-11
  }

  extensions {
    c   = c
    cpp = cc cxx cpp
  }

  flags {
    opt   = -O2
    c     = $opt -Wimplicit-fallthrough -Wall -Wextra
    cpp   = $c -std=c++20
    link  = -Wl,--gc-sections
  }

  objects_folder = build
  linker = $compiler.cpp
}